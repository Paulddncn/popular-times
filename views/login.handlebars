<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Popular Times</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>

<body class=" p-3 is-family-sans-serif">

    <main>
        <section class="section is-medium container-form mb-5">

        <form class="form section card mb-5">
            <!-- Sign in Form Header -->
            <h1 class="content is-large card-header-title is-centered">Login</h1>

            <!-- body of form -->
            
            <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-danger" type="email" placeholder="Email input" id="email-login">
                <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                <i class="fas fa-exclamation-triangle"></i>
                </span>
            </div>
            </div>

            <div class="field">
            <label class="label">Password</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-danger" type="password" placeholder="Password input" id="password-login">
                <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                <i class="fas fa-exclamation-triangle"></i>
                </span>
            </div>
            </div>
            
            <div class="field is-grouped">
            <div class="control">
                <button class="button is-link login-form" type="submit">Login</button>
                <p>To Create An Account Click <a href="/signup">Here</a></p>

            </div>
            </div>
        </form>

        </section>

    </main>
    <script src="./js/login.js"></script>
</body>